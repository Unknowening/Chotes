<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="40dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Name"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginTop="50dp"
        android:text="Name:"
        android:textSize="22dp"
        app:layout_constraintEnd_toStartOf="@+id/UsernameEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/NameEdit"
        android:layout_width="215dp"
        android:layout_height="35dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Username"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginTop="32dp"
        android:text="Username:"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/UsernameEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Name" />

    <EditText
        android:id="@+id/UsernameEdit"
        android:layout_width="215dp"
        android:layout_height="35dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Username"
        app:layout_constraintTop_toBottomOf="@+id/NameEdit" />

    <TextView
        android:id="@+id/Education"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginTop="32dp"
        android:text="Education:"
        android:textSize="22dp"
        app:layout_constraintEnd_toStartOf="@+id/UsernameEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Username" />

    <EditText
        android:id="@+id/EducationEdit"
        android:layout_width="215dp"
        android:layout_height="35dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Username"
        app:layout_constraintTop_toBottomOf="@+id/UsernameEdit" />

    <TextView
        android:id="@+id/Password"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginTop="32dp"
        android:text="Password:"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/PasswordEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Education" />

    <EditText
        android:id="@+id/PasswordEdit"
        android:layout_width="215dp"
        android:layout_height="35dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Password"
        app:layout_constraintTop_toBottomOf="@+id/EducationEdit" />

    <Button
        android:id="@+id/LoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PasswordEdit" />

</androidx.constraintlayout.widget.ConstraintLayout>